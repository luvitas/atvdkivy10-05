BoxLayout:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
    Label:
        text: 'Receita de Brownie'
        font_size: '50pt'
        color: (0, 0, 0, 1)
    Label:
        text: 'Ingredientes (10 porções)'
        font_size: '40'
        color: (1, 1, 0, 1)
    Label:
        text: '5 colheres de manteiga'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '3 xícara de achocolatado'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '12 colheres de farinha de trigo'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '3 ovos'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '6 colheres de açúcar'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: 'Modo de preparo - 30min'
        font_size: '40'
        color: (1, 1, 0, 1)
    Label:
        text: '1. Derreta a manteiga e reserve'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '2. Enquanto derrete a manteiga, misture os 3 ovos e a açúcar e misture bem'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '3. Acrescente a manteiga derretida no ovo e o açúcar'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '4. Agora é só misturar o achocolatado e o trigo'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '5. Unte uma forma com manteiga e achocolatado'
        font_size: '30'
        color: (0, 0, 0, 1)
    Label:
        text: '6. Leve ao forno a 180° C por 30 minutos'
        font_size: '30'
        color: (0, 0, 0, 1)
